<!DOCTYPE html>
<html lang="en">

<head>
  <title>Users</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <header>
    <a>FAANG Restaurant</a>
    <a>Logout</a>
  </header>

  <div id="imgRestaurant" class="jumbotron jumbotron-fluid d-flex flex-column justify-content-center pl-5 my-0">
    <h1>CurrentOrders</h1>
  </div>

  <% include partials/_restaurantButtons %>

  <main style="margin: 1em;">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Order id</th>
          <th scope="col">Start time</th>
          <th scope="col">Finish time</th>

        </tr>
      </thead>
      <tbody>
<tr>
         <tr>
          <img src="<%= order[0].picture %>">
            <td><%= order[0].id%></td>
              <!--<td><%= order[0].name %></td>-->
              <td><%= order[0].start_time.toLocaleString('en-GB', { timeZone: 'UTC' }) %></td>
              <td><%= order[0].end_time.toLocaleString('en-GB', { timeZone: 'UTC' }) %></td>
          </tr>

          <% for (let id in order) { %>
          <td><%= order[id].description%></td>
<br><% } %>
<tr>
            <div> <form class="form-inline" action="/api/widgets/<%= order[0].id%>" method="POST">
                <div class="form-group mb-2 text-center m-auto">

                  <label>Change fulfill time(min)</label>
                  <input
                    class="form-control"
                    type="text"
                    name="fulfillTime"
                    placeholder="time"
                    style="width: 300px; margin: 1em"
                  />
                  <button type="submit" class="btn btn-primary">Submit</button>

                </div>
                </form>
                <td><form method="POST" action="/api/widgets/<%= order[0].id%>/delete">
                  <button type="submit" class="btn btn-primary">Finish</button>
                  </form></td>
</div></tr>



</tr>

      </tbody>
    </table>
  </main>

</body>

</html>
